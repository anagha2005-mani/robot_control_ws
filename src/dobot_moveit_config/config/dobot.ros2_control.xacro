<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <ros2_control name="DobotSystem" type="system">

    <hardware>
      <plugin>dobot_hardware/DobotHardware</plugin>
      <param name="port">/dev/ttyACM0</param>
      <param name="baudrate">115200</param>
      <param name="dof">4</param>
    </hardware>

    <!-- Arm joints -->
    <joint name="magician_joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_2">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_3">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_4">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <!-- Gripper (optional, but included for completeness) -->
    <joint name="magician_joint_prismatic_l">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_prismatic_r">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

  </ros2_control>

</robot>
