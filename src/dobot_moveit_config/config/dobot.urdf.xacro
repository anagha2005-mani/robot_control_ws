<?xml version="1.0"?>
<robot name="dobot_magician">

  <!-- ================= BASE ================= -->
  <link name="magician_base_link">
    <visual>
      <geometry>
        <box size="0.12 0.12 0.05"/>
      </geometry>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= LINK 1 ================= -->
  <link name="magician_link_1">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.10"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= LINK 2 ================= -->
  <link name="magician_link_2">
    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.20"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= LINK 3 ================= -->
  <link name="magician_link_3">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.16"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= LINK 4 (WRIST) ================= -->
  <link name="magician_link_4">
    <visual>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="cyan">
        <color rgba="0 1 1 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= TOOL LINK ================= -->
  <link name="tool0">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= JOINTS ================= -->

  <joint name="magician_joint_1" type="revolute">
    <parent link="magician_base_link"/>
    <child link="magician_link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <joint name="magician_joint_2" type="revolute">
    <parent link="magician_link_1"/>
    <child link="magician_link_2"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <joint name="magician_joint_3" type="revolute">
    <parent link="magician_link_2"/>
    <child link="magician_link_3"/>
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <joint name="magician_joint_4" type="revolute">
    <parent link="magician_link_3"/>
    <child link="magician_link_4"/>
    <origin xyz="0 0 0.16" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <!-- ================= FIXED TOOL JOINT ================= -->
  <joint name="tool0_fixed_joint" type="fixed">
    <parent link="magician_link_4"/>
    <child link="tool0"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- ================= ros2_control ================= -->

  <ros2_control name="DobotSystem" type="system">
    <hardware>
      <plugin>dobot_hardware/DobotHardware</plugin>
    </hardware>


    <joint name="magician_joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_2">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_3">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>

    <joint name="magician_joint_4">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>